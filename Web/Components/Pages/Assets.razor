@using Domain.Entities
@using Application.Interfaces
@using Application.DTO
@rendermode InteractiveServer

@inject IAssetService AssetService
@inject NavigationManager Navigation
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IJSRuntime JS

@page "/Assets"

<PageTitle>Assets</PageTitle>

<MudPaper Class="pa-4">
    <div class="d-flex justify-content-between align-center mb-4">
        <MudText Typo="Typo.h5">Assets</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(()=>CreateAsset())" StartIcon="@Icons.Material.Filled.Add">Add Asset</MudButton>
    </div>

    <MudTable Items="assets" Dense="true" Hover="true" Class="mt-4" Loading="@loading">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Category</MudTh>
            <MudTh>Current Value</MudTh>
            <MudTh>Currency</MudTh>
            <MudTh>Purchase Date</MudTh>
            <MudTh>Purchase Value</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Category">@context.Category</MudTd>
            <MudTd DataLabel="Current Value">@context.CurrentValue.ToString("N2")</MudTd>
            <MudTd DataLabel="Currency">@context.Currency</MudTd>
            <MudTd DataLabel="Purchase Date">@context.PurchaseDate.ToShortDateString()</MudTd>
            <MudTd DataLabel="Purchase Value">@context.PurchaseValue.ToString("N2")</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Info" Color="Color.Info" OnClick="@(()=>Navigation.NavigateTo($"/assets/{context.Id}"))" />
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="@(()=>EditAsset(context))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(()=>DeleteAsset(context.Id))" />
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

@code {
    List<Domain.Entities.Asset> assets = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadAssets();
    }

    private async Task LoadAssets()
    {
        loading = true;
        try
        {
            assets = AssetService.GetAllAssets();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading assets: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private async Task CreateAsset()
    {
        var parameters = new DialogParameters<AssetDialog>
        {
            { x => x.Model, new AssetCreateDTO { PurchaseDate = DateTime.Today } },
            { x => x.IsEdit, false }
        };

        var dialog = await DialogService.ShowAsync<AssetDialog>("Add Asset", parameters);
        var result = await dialog.Result;
        
        if (result != null && !result.Canceled)
        {
            await LoadAssets();
        }
    }

    private async Task EditAsset(Asset asset)
    {
        var parameters = new DialogParameters<AssetDialog>
        {
            { x => x.Model, new AssetCreateDTO { 
                Name = asset.Name, 
                Category = asset.Category, 
                CurrentValue = asset.CurrentValue, 
                Currency = asset.Currency, 
                PurchaseDate = asset.PurchaseDate,
                PurchaseValue = asset.PurchaseValue,
                CreatedAt = asset.CreatedAt
            } },
            { x => x.IsEdit, true },
            { x => x.AssetId, asset.Id }
        };

        var dialog = await DialogService.ShowAsync<AssetDialog>("Edit Asset", parameters);
        var result = await dialog.Result;
        
        if (result != null && !result.Canceled)
        {
            await LoadAssets();
        }
    }

    private async Task DeleteAsset(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this asset?");

        if (confirmed)
        {
            try
            {
                // Note: I don't see DeleteAsset in IAssetService.
                Snackbar.Add("Feature coming soon: Delete Asset", Severity.Info);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting asset: {ex.Message}", Severity.Error);
            }
        }
    }
}
