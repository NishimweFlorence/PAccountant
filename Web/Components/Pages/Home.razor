@page "/"
@using Microsoft.AspNetCore.Authorization

@* @attribute [Authorize] *@

<PageTitle>PAccountant - Home</PageTitle>

<MudPaper Class="pa-6" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; margin-bottom: 20px;">
    <MudText Typo="Typo.h2" Class="mb-2">
        <span class="bi bi-calculator-fill" aria-hidden="true" style="margin-right: 10px;"></span>Welcome to PAccountant
    </MudText>
    <MudText Typo="Typo.body1">
        Manage your accounts efficiently with our accounting management system
    </MudText>
</MudPaper>

<div class="row">
    <div class="col-md-6 mb-4">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h5" Class="mb-3">
                    <span class="bi bi-credit-card" aria-hidden="true" style="margin-right: 8px;"></span>Accounts
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-3">
                    View and manage all your financial accounts in one place. Track balances, types, and account status.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" href="accounts">Go to Accounts</MudButton>
            </MudCardActions>
        </MudCard>
    </div>

    <div class="col-md-6 mb-4">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h5" Class="mb-3">
                    <span class="bi bi-gear" aria-hidden="true" style="margin-right: 8px;"></span>Features
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-3">
                    <ul style="margin: 0; padding-left: 20px;">
                        <li>Account Management</li>
                        <li>Easy to use interface</li>
                        <li>Real-time data sync</li>
                    </ul>
                </MudText>
            </MudCardContent>
        </MudCard>
    </div>
</div>

<MudPaper Class="pa-4" Elevation="0">
    <MudText Typo="Typo.h6" Class="mb-3">Getting Started</MudText>
    <div>
        <div class="d-flex align-items-center mb-2">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Class="me-2"></MudIcon>
            <MudText>Navigate to <strong>Accounts</strong> to view your financial accounts</MudText>
        </div>
        <div class="d-flex align-items-center mb-2">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Class="me-2"></MudIcon>
            <MudText>Create new accounts with custom details and account types</MudText>
        </div>
        <div class="d-flex align-items-center">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Class="me-2"></MudIcon>
            <MudText>Edit and update account information as needed</MudText>
        </div>
    </div>
</MudPaper>
