@page "/transactionCategories/{Id:int}"
@using Domain.Entities
@using Application.Interfaces;


@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.Identity.Client

@inject ITransactionCategoryService TransactionCategoryService
<PageTitle>Transaction Category Details</PageTitle>


<h1>Transaction Category Details</h1>
<div>
    <div class="card mt-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Transaction Category Detail</h3>
            <a href="/TransactionCategories"><button class="btn btn-secondary">Back to Transaction Category List</button></a>
          </div>
          <div class ="card-body">
            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@transactionCategory?.Id</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@transactionCategory?.Name</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@transactionCategory?.Type</dd>

                
                
            </dl>
        </div>
    </div>
    </div>


@code
{
    [Parameter]
    public int Id { get; set; }

    public TransactionCategory? transactionCategory;

    protected override void OnInitialized()
    {
        transactionCategory = TransactionCategoryService.GetTransactionCategoryById(Id);
    }
}
